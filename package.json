{
  "name": "ember-esbuild",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "broccoli-esbuild-transpiler",
    "ember-cli-esbuild",
    "test-packages/*"
  ],
  "scripts": {
    "lint": "npm-run-all lint:**",
    "lint:js": "eslint .",
    "lint:other": "prettier --check '**/*.{json,md,yml}'",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2"
  },
  "volta": {
    "node": "12.19.1",
    "yarn": "1.22.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{json,md,yml}": "prettier --write"
  }
}
